#:import utils kivy.utils
#:import XCamera kivy.garden.xcamera.XCamera

<BirdCard>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#1C2942')
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        row_force_default: True
        row_default_height: 200
        Label:
            id: bird_name
            font_size: self.width*5/100
            color: utils.get_color_from_hex('#FFFFFF')
        Image:
            id: image
            source: "oiseau.jpg"

        Label:
            text: "Information"
            font_size: self.width*5/100
            color: utils.get_color_from_hex('#FFFFFF') 

    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: sp(50)
        Button:
            text: "Retour"
            font_size: self.width*10/100
            color: utils.get_color_from_hex('#FFFFFF')
            on_press: root.manager.current = 'cameraview'
        Button:
            text: "Accueil"
            font_size: self.width*10/100
            color: utils.get_color_from_hex('#FFFFFF')
            on_press: root.manager.current = 'home'

<Loading>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        Label:
            text: "Chargement"
            font_size: self.width*10/100
            color: utils.get_color_from_hex('#FFFFFF')
        ProgressBar:
            id: progress
            value: 0
            max: 1
            pos_hint: {'x':.1}
            size_hint_x: 0.8

<Picture>:
    FloatLayout:
        orientation: 'vertical'
        Image:
            id: image
            source: "IMG.png"
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1, None
        height: sp(50)
        Button:
            text: "Retour"
            font_size: self.width*10/100
            color: utils.get_color_from_hex('#FFFFFF')
            on_press: root.manager.current = 'cameraview'
        Button:
            text: "Valider"
            font_size: self.width*10/100
            color: utils.get_color_from_hex('#FFFFFF')
            on_press: root.manager.current = 'loading'


<CameraView>:
    FloatLayout:
        orientation: 'vertical'
        Camera:
            id: camera
            play: True
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: sp(50)

        Button:
            text: 'Capture'
            size_hint_y: None
            height: '50dp'
            on_press: root.capture()

<Home>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#1C2942')
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        row_force_default: True
        row_default_height: 200
        GridLayout:
            cols: 2
            
            Image:
                source:"logo.jpeg"
                allow_stretch: True
            
            Label:
                text: "Oizam"
                font_size: self.width*30/100
                color: utils.get_color_from_hex('#FFFFFF')
        
        Label:
            text: """Bonjour, afin d'utiliser Oizam veuillez :"""
            font_size: self.width*5/100
            color: utils.get_color_from_hex('#FFFFFF')
            height: 100
        GridLayout:
            cols: 2
            Button:
                text: "Prendre une photo"
                size_hint_y: None
                width: self.width
                height: 100
                font_size: self.width*10/100
                background_color: utils.get_color_from_hex('#1C2942')
                color: utils.get_color_from_hex('#FFFFFF')
                on_press: root.manager.current = 'cameraview'
            Button:
                text: "Importer une photo"
                size_hint_y: None
                width: self.width
                height: 100
                font_size: self.width*10/100
                background_color: utils.get_color_from_hex('#1C2942')
                on_press: root.import_picture()