#:import utils kivy.utils
#:import XCamera kivy.garden.xcamera.XCamera

<Loading>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height

        ProgressBar:
            id: progress
            value: .25
            max: 1
            pos_hint: {'x':.1}
            size_hint_x: 0.8

<CameraView>:
    FloatLayout:
        orientation: 'vertical'
        XCamera:
            id: xcamera
            play: True
            on_picture_taken: root.picture_taken(*args)
            
        BoxLayout:
            orientation: 'horizontal'
            size_hint: 1, None
            height: sp(50)
            Button:
                text: 'Validate'
                on_release: root.manager.current = 'loading'

<Home>:
    canvas.before:
        Color:
            rgba: utils.get_color_from_hex('#1C2942')
        Rectangle:
            pos: self.pos
            size: self.size
    GridLayout:
        cols: 1
        row_force_default: True
        row_default_height: 200
        GridLayout:
            cols: 2
            
            Image:
                source:"logo.jpeg"
                allow_stretch: True
            
            Label:
                text: "Oizam"
                font_size: self.width*30/100
                color: utils.get_color_from_hex('#FFFFFF')
        
        Label:
            text: """Bonjour, afin d'utiliser Oizam veuillez :"""
            font_size: self.width*5/100
            color: utils.get_color_from_hex('#FFFFFF')
            height: 100
        GridLayout:
            cols: 2
            Button:
                text: "Prendre une photo"
                size_hint_y: None
                width: self.width
                height: 100
                font_size: self.width*10/100
                background_color: utils.get_color_from_hex('#1C2942')
                color: utils.get_color_from_hex('#FFFFFF')
                on_press: root.manager.current = 'cameraview'
            Button:
                text: "Importer une photo"
                size_hint_y: None
                width: self.width
                height: 100
                font_size: self.width*10/100
                background_color: utils.get_color_from_hex('#1C2942')
                on_press: root.import_picture()